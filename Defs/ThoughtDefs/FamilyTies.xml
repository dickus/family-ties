<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- PAIN -->
    <!-- CHILDREN PAIN -->
    <ThoughtDef>
        <defName>HarmedMyChild</defName>
        <thoughtClass>FamilyTies.Thought_HarmedMyChild</thoughtClass>
        <durationDays>30</durationDays>
        <stackLimit>5</stackLimit>
        <stackLimitForSameOtherPawn>3</stackLimitForSameOtherPawn>
        <stages>
            <li>
                <label>Harmed my child</label>
                <baseOpinionOffset>-30</baseOpinionOffset>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>MyChildIsInPain</defName>
        <thoughtClass>FamilyTies.Thought_MyChildIsInPain</thoughtClass>
        <workerClass>FamilyTies.ThoughtWorker_MyChildIsInPain</workerClass>
        <stages>
            <li>
                <label>My child is in pain</label>
                <description>The thought of my child's pain haunts me.</description>
                <baseMoodEffect>-7</baseMoodEffect>
            </li>
            <li>
                <label>My children are in pain</label>
                <description>My children are suffering... It's unbearable.</description>
                <baseMoodEffect>-15</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>HarmedMyOwnChild</defName>
        <thoughtClass>FamilyTies.Thought_HarmedMyOwnChild</thoughtClass>
        <durationDays>5</durationDays>
        <stackLimit>3</stackLimit>
        <stages>
            <li>
                <label>Harmed my own child</label>
                <description>I harmed my own child. How could I have done this?</description>
                <baseMoodEffect>-15</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- PARENTS PAIN -->
    <ThoughtDef>
        <defName>MyParentIsInPain</defName>
        <thoughtClass>FamilyTies.Thought_MyParentIsInPain</thoughtClass>
        <workerClass>FamilyTies.ThoughtWorker_MyParentIsInPain</workerClass>
        <stages>
            <li>
                <label>My parent is in pain</label>
                <description>My father/mother is so hurt... I'm afraid for him/her.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>My parents are in pain</label>
                <description>Both of my parents are hurt. I don't know what to do.</description>
                <baseMoodEffect>-6</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- SICKNESS -->
    <!-- CHILDREN SICKNESS -->
    <ThoughtDef>
        <defName>MyChildIsSick</defName>
        <thoughtClass>FamilyTies.Thought_MyChildIsSick</thoughtClass>
        <workerClass>FamilyTies.ThoughtWorker_MyChildIsSick</workerClass>
        <stages>
            <li>
                <label>My child is sick</label>
                <description>I'm worried about my child, {CHILDNAME}. I hope it gets better soon.</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
            <li>
                <label>My child is dying</label>
                <description>My child, {CHILDNAME}, is on the verge of death. I must be close. I can't lose him.</description>
                <baseMoodEffect>-15</baseMoodEffect>
            </li>
            <li>
                <label>My children are sick</label>
                <description>I'm worried about my children. I hope they all get better soon.</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
            <li>
                <label>My children are dying</label>
                <description>They all may die... I can't take it. Please, let them live...</description>
                <baseMoodEffect>-20</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- PARENTS SICKNESS -->
    <ThoughtDef>
        <defName>MyParentIsSick</defName>
        <thoughtClass>FamilyTies.Thought_MyParentIsSick</thoughtClass>
        <workerClass>FamilyTies.ThoughtWorker_MyParentIsSick</workerClass>
        <stages>
            <li>
                <label>My parent is sick</label>
                <description>My parent is sick. I hope they will get better soon.</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <li>
                <label>My parents are sick</label>
                <description>Both of my parents are sick. Who will take care of me now?</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- PROUD PARENTS -->
    <ThoughtDef>
        <defName>MyChildCreatedMasterpiece</defName>
        <durationDays>2</durationDays>
        <stackLimit>5</stackLimit>
        <stages>
            <li>
                <label>My child created a masterpiece!</label>
                <description>I'm so proud of my child! They totally have a talent for this.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>MyChildLeveledUpSkill</defName>
        <durationDays>0.5</durationDays>
        <stackLimit>5</stackLimit>
        <stages>
            <li>
                <label>My child became more skillful</label>
                <description>It's nice to see my child learn and get better.</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>

